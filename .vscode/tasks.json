{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gfortran debug",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "${env:windir}\\sysnative\\cmd.exe",
                    "args": [
                        "/c"
                    ]
                }
            },
            "command": "gfortran",
            "args": [
                "-g",
                "-O0",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\${fileBasename}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "gcc debug",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "${env:windir}\\sysnative\\cmd.exe",
                    "args": [
                        "/c"
                    ]
                },
            },
            "command": "gcc",
            "args": [
                "-g",
                "-O0",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\${fileBasename}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
		{
			"label": "x64 VC",
			"type": "shell",
            "options": {
                "shell": {
                    "executable": "${env:windir}\\sysnative\\cmd.exe",
                    "args": [
                        "vcvarsall.bat",
                        "x64"
                    ],
                },
                "cwd": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\Community\\VC\\Auxiliary\\Build"
            },
			"command": "echo OFF",
			"group": "build"
		},
    ]
}